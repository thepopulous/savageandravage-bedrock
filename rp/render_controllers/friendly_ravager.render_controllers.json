{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.friendly_ravager_base": {
      "arrays": {
        "textures": {
          "Array.skins": [
            "Texture.base",
            "Texture.base2",
            "Texture.base3",
            "Texture.base4",
            "Texture.base5",
            "Texture.base6"
          ]
        }
      },
      "geometry": "Geometry.default",
      "materials": [
        { "*": "Material.default" }
      ],
      "textures": [
        "Array.skins[query.skin_id]"
      ]
    },
    "controller.render.friendly_ravager_biomes": {
      "arrays": {
        "textures": {
          "Array.biomes": [
            "Texture.plains",
            "Texture.desert",
            "Texture.jungle",
            "Texture.savanna",
            "Texture.snow",
            "Texture.swamp",
            "Texture.taiga"
          ]
        }
      },
      "geometry": "Geometry.default",
      "materials": [
        { "*": "Material.default" }
      ],
      "textures": [
        "Array.biomes[query.mark_variant]"
      ]
    },
    "controller.render.friendly_ravager_saddle": {
      "arrays": {
        "textures": {
          "Array.saddle": [
            "Texture.saddle_none",
            "Texture.saddle"
          ]
        }
      },
      "geometry": "Geometry.default",
      "materials": [
        { "*": "Material.default" }
      ],
      "textures": [
        "Array.saddle[query.is_saddled]"
      ]
    }
  }
}
